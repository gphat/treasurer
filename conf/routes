# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                         controllers.Application.index

POST    /1.0/projects/:projectId/artifacts/:id    controllers.api.project.Artifact.create(projectId: String, id: String)
GET     /1.0/projects/:projectId/artifacts/:id    controllers.api.project.Artifact.item(projectId: String, id: String)
DELETE  /1.0/projects/:projectId/artifacts/:id    controllers.api.project.Artifact.delete(projectId: String, id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
